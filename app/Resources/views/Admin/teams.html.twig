{% extends 'base.html.twig' %}

{% block nav_top %}
    <h1 class="text-center">Admin panel</h1>
{% endblock %}

{% block body %}

    <div class="container-fluid content admin-team-page">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <h2 class="text-center">Create/Edit/Delete team</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12">
            {% for team in teams %}
                {{ include('templates/forms/team_create_edit.html.twig', {
                    'team': team,
                    'form': forms[team.id]
                }) }}
            {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}