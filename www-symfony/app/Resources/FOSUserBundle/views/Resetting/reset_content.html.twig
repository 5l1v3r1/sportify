{% trans_default_domain 'FOSUserBundle' %}
<div class="container content login-screen">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 text-center">
            <h2>Please type in new password</h2>
            {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'login-form' } }) }}
                <div class="form-group">
                    {{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'New password'}, 'label': false}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirm password'}, 'label': false}) }}
                </div>
                    {{ form_row(form._token) }}
                <div>
                    <button type="submit" class="btn btn-default green-btn">Submit</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
