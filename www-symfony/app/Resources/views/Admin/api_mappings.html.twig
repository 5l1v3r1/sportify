{% extends 'base.html.twig' %}

{% block nav_top %}
    <h1 class="text-center">Admin panel</h1>
{% endblock %}

{% block body %}

    <div class="container-fluid content">
        <div class="row">
            <div class="col-lg-3 col-lg-offset-2 col-md-12">
                {{ include('templates/forms/filter.html.twig', {
                    'form': filter_form,
                    'tournament_class': 'col-sm-8',
                    'button_class': 'col-sm-4 text-center'
                }) }}
            </div>
        </div>

        <div class="row">
            <div class="col-lg-2 col-lg-offset-2 col-md-12">

                {{ form_start(form) }}
                    {{ form_row(form.id) }}
                    {{ form_row(form.action) }}
                    {{ form_row(form.entityId, {'attr': {'class': 'form-control' } }) }}
                    {{ form_row(form.entityType, {'attr': {'class': 'form-control' } }) }}
                    {{ form_row(form.apiName, {'attr': {'class': 'form-control' } }) }}
                    {{ form_row(form.apiObjectId, {'attr': {'class': 'form-control' } }) }}
                    <div class="col-sm-2 text-center">
                        {{ form_row(form.button, {'attr': {'class': 'btn green-btn history-filter' } }) }}
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}