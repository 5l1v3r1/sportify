{% extends 'base.html.twig' %}

{% block nav_top %}
    <h1 class="text-center">Admin panel</h1>
{% endblock %}

{% block body %}

    <div class="container-fluid content">
        <div class="row">
            <h2 class="text-center">
                Select tournament
            </h2>
            <div class="col-lg-12 col-lg-offset-3 col-md-12">
                {{ include('templates/forms/filter.html.twig', {
                    'form': filter_form,
                    'tournament_class': 'col-sm-4',
                    'button_class': 'col-sm-4 text-center'
                }) }}
            </div>
        </div>

        <div class="row">
            <h2 class="text-center">
                Tournament-to-API mapping
            </h2>
            <div class="col-lg-12 col-lg-offset-3 col-md-12">
                {{ include('templates/forms/apimapping_create_edit.html.twig', {
                    'form': form,
                    'api_name_class': 'col-sm-2',
                    'api_object_id_class': 'col-sm-2',
                    'button_class': 'col-sm-4 text-center'
                }) }}
            </div>
        </div>

        <h2 class="text-center">
            Available Tournaments via API:
        </h2>
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 standing-title">ID</div>
                    <div class="col-xs-6 col-sm-6 standing-title">Name</div>
                </div>
                {% for tournament in api_tournaments %}
                    <div class="row standing">
                        <div class="col-xs-6 col-sm-6">{{ tournament.id }}</div>
                        <div class="col-xs-6 col-sm-6">{{ tournament.name }} </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}