{% extends 'base.html.twig' %}

{% block nav_top %}
    <h1 class="text-center">Admin panel</h1>
{% endblock %}

{% block body %}

    <div class="container-fluid content">
        <div class="row">
            <div class="col-lg-12 col-lg-offset-1 col-md-12">
                <h2 class="text-center">Create/Edit/Delete match</h2>
            </div>
        </div>
        <div class=" row">
            <div class="col-lg-10 col-lg-offset-1">
                {{ include('templates/forms/filter.html.twig', {
                    'form': filter_form,
                    'tournament_class': 'col-sm-4 col-sm-offset-3',
                    'button_class': 'col-sm-2 text-center'
                }) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-lg-offset-1 col-md-12">
                {% for form in forms %}
                    {{ include('templates/forms/match_create_edit.html.twig', {
                        'form': form
                    }) }}
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}