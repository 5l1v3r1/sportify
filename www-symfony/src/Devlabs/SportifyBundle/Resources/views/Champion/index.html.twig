{% extends 'DevlabsSportifyBundle:Champion:layout.html.twig' %}

{% block content %}

    <div class="container-fluid content">
        <div class="matches-filters row">
            <h2 class="text-center">Open until: {{ deadline }}</h2>
            <h2 class="text-center">
                Your Champion prediction:
                {% if prediction_champion == null %}
                    N/A
                {% else %}
                    {{ prediction_champion.teamId.name }}
                {% endif %}
            </h2>
        </div>

        <div class="matches-filters row">
            <div class="col-lg-10 col-lg-offset-1">
                    <div class="row">
                        {{ form_start(filter_form) }}
                        <div class="col-sm-4">
                            <label>Tournament</label>
                            {{ form_row(filter_form.tournament_id, {'attr': {'class': 'form-control' } }) }}
                        </div>
                        <div class="col-sm-2 text-center">
                            {{ form_row(filter_form.button, {'attr': {'class': 'btn green-btn history-filter' } }) }}
                        </div>
                        {{ form_end(filter_form) }}
                    </div>
            </div>
        </div>

        <div class="matches-filters row">
            <div class="col-lg-10 col-lg-offset-1">
                <div class="row">
                    {{ form_start(champion_form) }}
                    <div class="col-sm-4">
                        <label>Champion Team</label>
                        {{ form_row(champion_form.team_id, {'attr': {'class': 'form-control' }, 'disabled': disabled_attribute}) }}
                    </div>
                    <div class="col-sm-2 text-center">
                        {% if button_action == 'BET' %}
                            {{ form_row(champion_form.button, {'attr': {'class': 'btn green-btn history-filter' }, 'disabled': disabled_attribute }) }}
                        {% else %}
                            {{ form_row(champion_form.button, {'attr': {'class': 'btn yellow-btn history-filter' }, 'disabled': disabled_attribute }) }}
                        {% endif %}
                    </div>
                    {{ form_end(champion_form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}