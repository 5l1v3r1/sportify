{% extends 'DevlabsSportifyBundle:Matches:layout.html.twig' %}

{% block content %}

    <div class="container-fluid content">
        <div class="matches-filters row">
            <div class="col-lg-10 col-lg-offset-1">
                {{ form_start(filter_form) }}
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Tournament</label>
                            {{ form_row(filter_form.tournament_id, {'attr': {'class': 'form-control' } }) }}
                        </div>
                        <div class="col-sm-3">
                            <label>Date from</label>
                            {{ form_row(filter_form.date_from, {'attr': {'class': 'form-control' } }) }}
                        </div>
                        <div class="col-sm-3">
                            <label>Date to</label>
                            {{ form_row(filter_form.date_to, {'attr': {'class': 'form-control' } }) }}
                        </div>
                        <div class="col-sm-2 text-center">
                            {{ form_row(filter_form.button, {'attr': {'class': 'btn green-btn history-filter' } }) }}
                        </div>
                    </div>
                {{ form_end(filter_form) }}
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-10 col-md-offset-1 col-sm-12">
                {% for match in matches %}
                    {{ form_start(match_forms[match.id]) }}
                        {{ form_row(match_forms[match.id].match_id) }}
                        {{ form_errors(match_forms[match.id]) }}
                        <div class="match">
                            <div class="row">
                                <div class="match-date text-center">{{ match.datetime|date('Y-m-d H:i') }}</div>
                                <div class="match-title text-center">{{ match.tournamentId.name }}</div>
                                <div class="col-lg-12">
                                    <div class="match-item">
                                        <div class="row">
                                            <div class="col-sm-4 match-item-mobile"><!-- <span class="pull-left flag flag-icon flag-icon-gr"></span> -->{{ match.homeTeam }}</div>
                                            <div class="col-sm-4 bettings">
                                                <div class="bet-rectangle">
                                                    {% include 'img/result-rectangle.svg' %}
                                                </div>
                                                {% if predictions[match.id] is not defined%}
                                                    <div class="bet-form not-filled">
                                                        {{ form_row(match_forms[match.id].home_goals, {'attr': {'class': 'bet-field', 'placeholder': '?' }, 'disabled': match.disabledAttribute}) }}
                                                        <span>:</span>
                                                        {{ form_row(match_forms[match.id].away_goals, {'attr': {'class': 'bet-field', 'placeholder': '?' }, 'disabled': match.disabledAttribute }) }}
                                                    </div>
                                                {% else %}
                                                    <div class="bet-form">
                                                        {{ form_row(match_forms[match.id].home_goals, {'attr': {'class': 'bet-field' }, 'disabled': match.disabledAttribute }) }}
                                                        <span>:</span>
                                                        {{ form_row(match_forms[match.id].away_goals, {'attr': {'class': 'bet-field' }, 'disabled': match.disabledAttribute }) }}
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="col-sm-4 match-item-mobile">{{ match.awayTeam }}<!-- <span class="pull-right flag flag-icon flag-icon-gr"></span> --></div>
                                        </div>
                                    </div>
                                    {% if match.disabledAttribute == true %}
                                    <div class="row">
                                        <div class="match-date text-center">Match locked. Already started</div>
                                    </div>
                                    {% endif %}
                                    {{ form_row(match_forms[match.id].action) }}
                                    <div class="row">
                                        <div class="col-sm-12 text-center">
                                            {% if predictions[match.id] is not defined%}
                                                {{ form_row(match_forms[match.id].button, {'attr': {'class': 'btn green-btn match-btn' }, 'disabled': match.disabledAttribute }) }}
                                            {% else %}
                                                {{ form_row(match_forms[match.id].button, {'attr': {'class': 'btn yellow-btn match-btn' }, 'disabled': match.disabledAttribute }) }}
                                            {% endif %}
                                        </div>
                                     </div>
                                </div>
                            </div>
                        </div>
                    {{ form_end(match_forms[match.id]) }}
                {% endfor %}
                {% if matches|length == 0 %}
                    <div class="text-center">
                        No matches to display.
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}