{% extends 'DevlabsSportifyBundle:Matches:layout.html.twig' %}

{% block content %}

    {% if app.user %}
        Current user:
        <p>{{ app.user.id }} - {{ app.user.username }} - {{app.user.email }}</p>
    {% endif %}

    Filter bar:

    {{ form_start(filter_form) }}
    Tournament:
    {{ form_row(filter_form.tournament_id) }}
    Date From:
    {{ form_row(filter_form.date_from) }}
    Date To:
    {{ form_row(filter_form.date_to) }}
    {{ form_end(filter_form) }}

    Matches:

        <p>
            <div>
                <table>
                    <thead></thead>
                    <tbody>
                        {% for match in matches %}
                            <tr>
                            <td>
                                {{ form_start(match_forms[match.id]) }}
                                    {{ form_row(match_forms[match.id].match_id) }}
                                    {{ form_errors(match_forms[match.id]) }}

                                    {{ match.id }} - {{ match.homeTeam }} - {{ match.awayTeam }}

                                    {{ form_row(match_forms[match.id].home_goals) }}
                                    {{ form_row(match_forms[match.id].away_goals) }}
                                    {{ form_row(match_forms[match.id].action) }}
                                    {{ form_row(match_forms[match.id].button) }}
                                {{ form_end(match_forms[match.id]) }}
                            </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </p>



{% endblock %}