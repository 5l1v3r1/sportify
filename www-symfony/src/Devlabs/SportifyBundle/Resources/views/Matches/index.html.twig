                                    {{ form_row(forms[match.id].button) }}
                                {{ form_end(forms[match.id]) }}


                                {#{{ match.id }} - {{ match.homeTeam }} - {{ match.awayTeam }}#}
                                    {#{% if predictions[match.id] is defined %}#}
                                        {#{% set prediction = predictions[match.id] %}#}
                                        {#--- {{ prediction.homeGoals }} - {{ prediction.awayGoals }}#}
                                    {#{% endif %}#}
                            </td>
                            {#<td>#}
                                {#{{ form_widget(forms[match.id]) }}#}
                            {#</td>#}
                            {#{{ form_end(forms[match.id]) }}#}
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </p>



{% endblock %}